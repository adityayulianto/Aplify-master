<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingTop="30dp" android:paddingBottom="30dp"
        android:background="@color/colorPrimary">

        <TextView
            android:text="Chicken Gomez"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:textSize="20dp"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/coin_md"
            android:id="@+id/icon_coin"
            android:layout_below="@+id/tvName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp" />

        <TextView
            android:text="1,000 AP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCoin"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/tvName"
            android:layout_toEndOf="@+id/icon_coin"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>